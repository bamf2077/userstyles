{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.py"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["Makefile"],
      "options": {
        "tabWidth": 4,
        "useTabs": true
      }
    }
  ]
}
