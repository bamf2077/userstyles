{
  "name": "userstyles",
  "author": "Francis Zhao",
  "type": "module",
  "scripts": {
    "build": "yarn run build:sass && yarn run build:postcss && yarn run format",
    "build:sass": "sass --no-charset --no-source-map --update src:dist",
    "build:postcss": "postcss dist/**/*.css --replace",
    "format": "prettier --write --cache --cache-location .yarn/cache/.prettiercache --cache-strategy metadata .",
    "yarn-sdks-vscode": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5"
  }
}
