{
  "name": "userstyles",
  "author": "Francis Zhao",
  "scripts": {
    "sass:watch": "sass --no-charset --update --no-source-map --watch src:dist",
    "sass": "sass --no-charset --no-source-map src:dist",
    "postcss": "postcss dist/**/*.css --use postcss-preset-env --replace --no-map",
    "prebuild": "prettier --write src",
    "build": "npm run sass && npm run postcss",
    "postbuild": "prettier --write dist"
  },
  "devDependencies": {
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-preset-env": "^7.8.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.6"
  },
  "browserslist": [
    "last 3 years"
  ]
}
