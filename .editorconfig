# EditorConfig
# https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.c,*.h,*.cpp,*.hpp,*.java,*.cs,*.rs,*.sh,*ps1,*.php,*.py}]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
